<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="project.lonelywheeler.ui.viewmodel.main.MotorVehicleViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.activity.main.fragment.MotorVehicleFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/fragmentUpdateOffer_productBasicInfo"
                    layout="@layout/product_basic_info"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:product="@{viewModel.motorVehicle}" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fragmentUpdateOffer_tvProductSpecificInfoPlaceholder"
                    style="@style/TextAppearance.LonelyWheeler.Title.Product.GeneralInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/product_specific_info_placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_productBasicInfo" />

                <TextView
                    android:id="@+id/fragmentUpdateOffer_spnrCarBodyType_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Body type: "
                    android:textColor="@color/hintTextColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_tvProductSpecificInfoPlaceholder" />

                <Spinner
                    android:id="@+id/fragmentUpdateOffer_spnrCarBodyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/hintTextColor"
                    android:gravity="end"
                    app:layout_constraintBottom_toBottomOf="@id/fragmentUpdateOffer_spnrCarBodyType_placeholder"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/fragmentUpdateOffer_spnrCarBodyType_placeholder" />

                <TextView
                    android:id="@+id/fragmentUpdateOffer_spnrCarEmissionStandard_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Emission standard: "
                    android:textColor="@color/hintTextColor"
                    app:layout_constraintStart_toStartOf="@id/fragmentUpdateOffer_spnrCarBodyType_placeholder"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_spnrCarBodyType_placeholder" />

                <Spinner
                    android:id="@+id/fragmentUpdateOffer_spnrCarEmissionStandard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    app:layout_constraintBottom_toBottomOf="@id/fragmentUpdateOffer_spnrCarEmissionStandard_placeholder"
                    app:layout_constraintEnd_toEndOf="@+id/fragmentUpdateOffer_spnrCarBodyType"
                    app:layout_constraintTop_toTopOf="@id/fragmentUpdateOffer_spnrCarEmissionStandard_placeholder" />

                <TextView
                    android:id="@+id/fragmentUpdateOffer_spnrCarFuelType_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Fuel type: "
                    android:textColor="@color/hintTextColor"
                    app:layout_constraintStart_toStartOf="@id/fragmentUpdateOffer_spnrCarEmissionStandard_placeholder"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_spnrCarEmissionStandard_placeholder" />

                <Spinner
                    android:id="@+id/fragmentUpdateOffer_spnrCarFuelType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="end"
                    app:layout_constraintBottom_toBottomOf="@id/fragmentUpdateOffer_spnrCarFuelType_placeholder"
                    app:layout_constraintEnd_toEndOf="@id/fragmentUpdateOffer_spnrCarEmissionStandard"
                    app:layout_constraintTop_toTopOf="@id/fragmentUpdateOffer_spnrCarFuelType_placeholder" />

                <Spinner
                    android:id="@+id/fragmentUpdateOffer_spnrCarGearbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_spnrCarFuelType" />

                <Spinner
                    android:id="@+id/fragmentUpdateOffer_spnrCarSteeringWheelType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_spnrCarGearbox" />

                <Spinner
                    android:id="@+id/fragmentUpdateOffer_spnrCarDrivetrain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_spnrCarSteeringWheelType" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragmentUpdateOffer_tilCarMaxSpeed"
                    style="@style/Widget.LonelyWheeler.TextInputLayout"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/max_speed_placeholder"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_spnrCarDrivetrain">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragmentUpdateOffer_etCarMaxSpeed"
                        style="@style/Widget.LonelyWheeler.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/hintTextColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragmentUpdateOffer_tilCarHorsePower"
                    style="@style/Widget.LonelyWheeler.TextInputLayout"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/horse_power_placeholder"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_tilCarMaxSpeed">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragmentUpdateOffer_etCarHorsePower"
                        style="@style/Widget.LonelyWheeler.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/hintTextColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragmentUpdateOffer_tilCarMileage"
                    style="@style/Widget.LonelyWheeler.TextInputLayout"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/mileage_placeholder"
                    app:layout_constraintBottom_toTopOf="@id/fragmentUpdateOffer_tilCarHorsePower"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_tilCarMaxSpeed">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragmentUpdateOffer_etCarMileage"
                        style="@style/Widget.LonelyWheeler.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/hintTextColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fragmentUpdateOffer_tvNumberOfPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="64dp"
                    android:text="@string/number_of"
                    android:textColor="@color/hintTextColor"
                    app:layout_constraintStart_toStartOf="@id/fragmentUpdateOffer_tilCarHorsePower"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_tilCarHorsePower" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fragmentUpdateOffer_tvDoorsPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/doors"
                    android:textColor="@color/hintTextColor"
                    app:layout_constraintBottom_toTopOf="@id/fragmentUpdateOffer_tilNumberOfDoors"
                    app:layout_constraintEnd_toEndOf="@+id/fragmentUpdateOffer_tilNumberOfDoors"
                    app:layout_constraintStart_toStartOf="@+id/fragmentUpdateOffer_tilNumberOfDoors" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragmentUpdateOffer_tilNumberOfDoors"
                    style="@style/Widget.LonelyWheeler.TextInputLayout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/fragmentUpdateOffer_tvNumberOfPlaceholder"
                    app:layout_constraintStart_toEndOf="@id/fragmentUpdateOffer_tvNumberOfPlaceholder"
                    app:layout_constraintTop_toTopOf="@id/fragmentUpdateOffer_tvNumberOfPlaceholder">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragmentUpdateOffer_etNumberOfDoors"
                        style="@style/Widget.LonelyWheeler.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/hintTextColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fragmentUpdateOffer_tvSeetsPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/seats_placeholder"
                    android:textColor="@color/hintTextColor"
                    app:layout_constraintBottom_toTopOf="@id/fragmentUpdateOffer_tilNumberOfSeats"
                    app:layout_constraintEnd_toEndOf="@+id/fragmentUpdateOffer_tilNumberOfSeats"
                    app:layout_constraintStart_toStartOf="@+id/fragmentUpdateOffer_tilNumberOfSeats" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragmentUpdateOffer_tilNumberOfSeats"
                    style="@style/Widget.LonelyWheeler.TextInputLayout"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/fragmentUpdateOffer_tilNumberOfDoors"
                    app:layout_constraintStart_toEndOf="@id/fragmentUpdateOffer_tilNumberOfDoors"
                    app:layout_constraintTop_toTopOf="@id/fragmentUpdateOffer_tilNumberOfDoors">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fragmentUpdateOffer_etNumberOfSeats"
                        style="@style/Widget.LonelyWheeler.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textColor="@color/hintTextColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fragmentUpdateOffer_tvCarHasMultimedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="48dp"
                    android:text="@string/has_multimedia"
                    android:textColor="@color/hintTextColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_tvNumberOfPlaceholder" />

                <RadioGroup
                    android:id="@+id/fragmentUpdateOffer_rbtnGroupCarHasMultimedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:buttonTint="@color/colorPrimary"
                    android:checkedButton="@id/fragmentUpdateOffer_rbtnGroupCarHasMultimediaYes"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/fragmentUpdateOffer_tvCarHasMultimedia"
                    app:layout_constraintStart_toEndOf="@+id/fragmentUpdateOffer_tvCarHasMultimedia"
                    app:layout_constraintTop_toTopOf="@id/fragmentUpdateOffer_tvCarHasMultimedia">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/fragmentUpdateOffer_rbtnGroupCarHasMultimediaYes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/yes"
                        android:textColor="@color/hintTextColor" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/fragmentUpdateOffer_rbtnGroupCarHasMultimediaNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textColor="@color/hintTextColor" />
                </RadioGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragmentUpdateOffer_btnUpdate"
                    style="@style/Widget.LonelyWheeler.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:paddingHorizontal="16dp"
                    android:text="@string/confirm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/fragmentUpdateOffer_btnCancel"
                    app:layout_constraintTop_toBottomOf="@id/fragmentUpdateOffer_rbtnGroupCarHasMultimedia" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragmentUpdateOffer_btnCancel"
                    style="@style/Widget.LonelyWheeler.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:text="@string/cancel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fragmentUpdateOffer_btnUpdate"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentUpdateOffer_rbtnGroupCarHasMultimedia" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </FrameLayout>
</layout>