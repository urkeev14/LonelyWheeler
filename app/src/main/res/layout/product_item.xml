<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="project.lonelywheeler.util.date.DateUtils" />

        <import type="project.lonelywheeler.util.StringUtili" />

        <variable
            name="product"
            type="project.lonelywheeler.db.entity.product.ProductEntity" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/productContainer"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:elevation="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/productItem_ivUserImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/ic_no_photos"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:mySrc="@{product.pictures}"
                tools:src="@mipmap/ic_rolce_foreground" />

            <TextView
                android:id="@+id/productItem_tvProductTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{product.basicInfo.title}"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productItem_ivUserImage"
                tools:text="Rolce Royce " />

            <TextView
                android:id="@+id/productItem_tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{`` + product.basicInfo.value + `$`}"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productItem_tvProductTitle"
                tools:text="50.000$" />

            <TextView
                android:id="@+id/yearOfProduction_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@{`(` + product.basicInfo.yearOfProduction + `.)`}"
                android:textColor="@color/hintTextColor"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productItem_tvProductPrice"
                tools:text="(2015.)" />

            <TextView
                android:id="@+id/datePosted_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:text="Posted: "
                android:textColor="@color/hintTextColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yearOfProduction_placeholder" />

            <TextView
                android:id="@+id/datePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@{DateUtils.INSTANCE.createDate(product.basicInfo.dateModified)}"
                android:textColor="@color/hintTextColor"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/datePosted_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/datePosted_placeholder"
                tools:text="12.12.2022." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
