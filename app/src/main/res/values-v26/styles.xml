<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.LonelyWheeler.TextInputEditText" parent="android:Widget.EditText">
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="Widget.LonelyWheeler.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/Widget.LonelyWheeler.SmallComponent.OutlinedBoxCut
        </item>
        <item name="hintTextAppearance">
            @style/TextAppearance.LonelyWheeler.TextInputLayout.HintText
        </item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <!--        TextInputLayout SEARCH styling-->
    <style name="Widget.LonelyWheeler.TextInputLayout.Search">
        <item name="hintTextAppearance">
            @style/TextAppearance.LonelyWheeler.TextInputLayout.HintText
        </item>
        <item name="endIconDrawable">@drawable/ic_search_orange</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintTextColor">@android:color/transparent</item>        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/searchBoxColor</item>
    </style>

    <!--        TextInputEditText SEARCH styling-->
    <style name="Widget.LonelyWheeler.TextInputEditText.Search">

        <item name="shapeAppearance">@style/Widget.LonelyWheeler.SmallComponent.OutlinedBoxCut
        </item>
        <item name="autoSizeMinTextSize">8dp</item>
        <item name="autoSizeStepGranularity">1px</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!--    ShapeAppearance SearchBox-->
    <style name="Widget.LonelyWheeler.SmallComponent.SearchEditText" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>

    <style name="ShapeAppearance.LonelyWheeler.UserPicture" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">25%</item>
        <item name="cornerFamily">cut</item>
        <item name="backgroundColor">@color/defaultBackgroundColor</item>
        <item name="backgroundTint">@color/defaultBackgroundColor</item>
        <item name="boxBackgroundColor">@color/defaultBackgroundColor</item>
    </style>
</resources>